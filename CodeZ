            motorVelocity4 = Motor4(motorVelocity4);
            printf("%d %d %d %d\n",motorVelocity1,motorVelocity2,motorVelocity3,motorVelocity4);
            }
    }
     xyzz = xyzz + 1;
     }
     printf("Anymore Commands Y/N???");
     scanf("%s",&againANS);
     if (againANS = "Y"){
        againQA = "True";
     }
    } while (againANS = "Y");
