#include <stdio.h>
#include <stdlib.h>
#include <stdbool.h>
#include <string.h>
int Motor1(inputee){
    inputee = inputee + 10;
    return inputee;
}
int Motor2(inputee2){
    inputee2 = inputee2 + 10;
    return inputee2;

}
int Motor3(inputee3){
    inputee3 = inputee3 + 10;
    return inputee3;
}
int Motor4(inputee4){
    inputee4 = inputee4 + 10;
    return inputee4;
}
int main()
{
    int motorVelocity1 = 20;
    int motorVelocity2 = 20;
    int motorVelocity3 = 20;
    int motorVelocity4 = 20;
